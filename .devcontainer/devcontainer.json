{
	"name": "C# (.NET SDK)",
	"image": "mcr.microsoft.com/devcontainers/dotnet:1-8.0-jammy",
	"features": {
		"ghcr.io/devcontainers/features/dotnet:2": {
			"version": "10.0",
			"additionalVersions": "9.0"
		},
		"ghcr.io/devcontainers/features/node:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-dotnettools.csharp",
				"ms-dotnettools.csdevkit"
			],
			"settings": {
				"dotnet.defaultSolution": "ModelContextProtocol.slnx"
			}
		}
	},
	"postCreateCommand": {
		"dev certs": "dotnet dev-certs https --trust",
		"mono": "sudo apt-get update && sudo apt-get install -y mono-devel",
		"list sdks": "dotnet --list-sdks && echo 'Available .NET SDKs installed successfully!'"
	}
}